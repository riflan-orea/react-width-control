{
  "name": "react-width-control",
  "version": "1.2.0",
  "description": "ðŸŽ¯ React components for responsive width constraints and text truncation - MinWidth, MaxWidth, Width controls & Text truncation with ellipsis for modern UI development",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "examples.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:prod": "rollup -c --environment NODE_ENV:production",
    "build:fast": "rollup -c --environment NODE_ENV:development --no-sourcemap",
    "build:cache": "rollup -c --environment NODE_ENV:development --cache",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:watch\"",
    "dev:server": "http-server . -p 3000 -o",
    "dev:watch": "rollup -c -w",
    "dev:profile": "rollup -c --environment NODE_ENV:development --profile",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint src/**/*.{ts,tsx} --ext .ts,.tsx",
    "lint:fix": "eslint src/**/*.{ts,tsx} --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "test:components": "echo \"Starting TestRunner component...\" && npm run dev",
    "test:all": "npm run test:minwidth && npm run test:maxwidth && npm run test:width && npm run test:truncate && npm run test:multilinetruncate && npm run test:texttruncate",
    "test:minwidth": "echo \"Running MinWidth tests...\" && npm run build",
    "test:maxwidth": "echo \"Running MaxWidth tests...\" && npm run build",
    "test:width": "echo \"Running Width tests...\" && npm run build",
    "test:truncate": "echo \"Running Truncate tests...\" && npm run build",
    "test:multilinetruncate": "echo \"Running MultilineTruncate tests...\" && npm run build",
    "test:texttruncate": "echo \"Running TextTruncate tests...\" && npm run build",
    "test:component": "echo \"Running specific component test...\" && npm run build",
    "test:watch": "rollup -c -w",
    "test:clear": "rm -rf dist node_modules/.cache",
    "quality": "npm run lint && npm run format:check && npm run type-check && npm run build",
    "pre-commit": "npm run lint:fix && npm run format && npm run type-check",
    "verify": "npm run type-check && npm run build",
    "verify:package": "npm run build && npm pack --dry-run",
    "test:install": "npm run build && npm pack && npm install ./react-width-control-*.tgz",
    "analyze": "npm run build && npx webpack-bundle-analyzer dist/index.js",
    "analyze:report": "npm run build && npx webpack-bundle-analyzer dist/index.js --report",
    "publish": "npm run build && npm publish",
    "publish:dry-run": "npm run build && npm publish --dry-run",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "docs:generate": "echo \"Generating documentation...\"",
    "docs:serve": "http-server docs -p 8080",
    "docs:build": "echo \"Building documentation...\"",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/react-width-control.git"
  },
  "homepage": "https://github.com/username/react-width-control#readme",
  "bugs": {
    "url": "https://github.com/username/react-width-control/issues"
  },
  "keywords": [
    "react",
    "react-component",
    "react-width",
    "minwidth",
    "maxwidth",
    "min-width",
    "max-width",
    "width-constraints",
    "responsive-design",
    "responsive-components",
    "css-width",
    "ui-components",
    "layout",
    "css-constraints",
    "react-ui",
    "frontend",
    "web-components",
    "typescript",
    "tsx",
    "react-typescript",
    "responsive-web",
    "mobile-first",
    "adaptive-design",
    "css-in-js",
    "styled-components",
    "react-styling",
    "width-control",
    "element-sizing",
    "container-width",
    "breakpoints",
    "flexible-width",
    "react-layout",
    "ui-library",
    "component-library",
    "text-truncate",
    "ellipsis",
    "text-overflow",
    "line-clamp",
    "multiline-truncate",
    "text-ellipsis",
    "overflow-hidden",
    "text-clamp"
  ],
  "author": {
    "name": "Riflan Ahamed",
    "email": "your-email@example.com",
    "url": "https://github.com/username"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "rollup": "^2.79.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "typescript": "^4.9.5",
    "concurrently": "^7.6.0",
    "http-server": "^14.1.1",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "prettier": "^2.8.0",
    "webpack-bundle-analyzer": "^4.7.0"
  }
}